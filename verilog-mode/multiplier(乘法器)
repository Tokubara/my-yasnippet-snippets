# -*- mode: snippet -*-
# name: multiplier(乘法器)
# key: 
# --
module mult_for(
        input[8: 1]op0,
        input[8: 1]op1,
        output reg [16: 1]result
    );
    integer i;
    always @ begin
        result = 0;
        for (i = 1;i <= 8; i = i + 1)
            if (op1[i])
                result = result + (op0 << (i - 1));
    end
endmodule
