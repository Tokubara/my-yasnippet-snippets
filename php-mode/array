$person = array("Edison", "Wankel", "Crapper");
$creator = array('Light bulb' => "Edison",  'Rotary Engine' => "Wankel",  'Toilet' => "Crapper");
$creator['Light bulb']

// iterate
foreach ($person as $name) {  echo "Hello, {$name}<br/>"; }

foreach ($creator as $invention => $inventor) {  echo "{$inventor} invented the {$invention}<br/>"; }

